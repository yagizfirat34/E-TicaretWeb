@model Kullanicı
@{
    ViewData["Title"] = "Yeni Kullanıcı Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullancı Ekleme</h1>

<div class="container mt-5">

                <div class="card-body">
                    <form method="post" asp-action="Create" asp-controller="Kullanıcı">
                        
                        <div class="mb-3">
                            <label for="AdSoyad" class="form-label fw-bold">Ad Soyad</label>
                            <input type="text" asp-for="AdSoyad" class="form-control" placeholder="Adınızı ve soyadınızı giriniz" />
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Eposta" class="form-label fw-bold">E-posta</label>
                            <input type="email" asp-for="Eposta" class="form-control" placeholder="ornek@email.com" />
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label for="Sifre" class="form-label fw-bold">Şifre</label>
                            <input type="password" asp-for="Sifre" class="form-control" placeholder="Güçlü bir şifre giriniz" />
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Kullanıcı Ekle
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </a>
                        </div>
                        
                    </form>
                </div>
  
</div>