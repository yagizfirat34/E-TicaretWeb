@model Urun
@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Güncelleme</h1>

<div class="container mt-5">

    <div class="card-body">
        <form method="post" asp-action="Update" asp-controller="Urun" enctype="multipart/form-data">

            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="ResimUrl" />

            <div class="mb-3">
                <label for="UrunAdi" class="form-label fw-bold">Ürün Adı</label>
                <input type="text" asp-for="UrunAdi" class="form-control" placeholder="Ürün adını giriniz" />
                <span asp-validation-for="UrunAdi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="ResimDosyasi" class="form-label fw-bold">Ürün Resmi</label>
                @if (!string.IsNullOrEmpty(Model.ResimUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.ResimUrl" class="img-thumbnail" width="150" />
                        <p class="text-muted small">Mevcut resim (Yeni resim seçerseniz değiştirilecek)</p>
                    </div>
                }
                <input type="file" name="ResimDosyasi" class="form-control" accept="image/*" />
            </div>

            <div class="mb-4">
                <label for="Fiyat" class="form-label fw-bold">Fiyat</label>
                <input type="number" step="0.01" asp-for="Fiyat" class="form-control" placeholder="Ürün fiyatını giriniz" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label for="Stok" class="form-label fw-bold">Stok</label>
                <input type="number" asp-for="Stok" class="form-control" placeholder="Stok miktarını giriniz" />
                <span asp-validation-for="Stok" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle me-2"></i>Ürünü Güncelle
                </button>
                <a asp-action="List" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>

        </form>
    </div>

</div>
